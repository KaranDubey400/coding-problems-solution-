#include <iostream>
using namespace std;
int main(){
    int n ,c;
    cin>>n>>c;
       int sum=0,product=1;
    
   
    while(c==1){
       for(int i=0; i<=n;i++){
           sum=sum+i;
       }
       cout<<sum;
       break;
    } 
    
    if(c==2 ){
    while( c==2){
           for (int i = 1; i <= n; i++) {
             product *= i;
           }
           cout << product;
           break;
    }
    }else if( c != 1) {
          cout<<-1;
      }
     
}
